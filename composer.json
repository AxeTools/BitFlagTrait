{
    "name": "axetools/bitflagtrait",
    "description": "A PHP trait to enable bitwise comparison of flags",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "bitwise",
        "comparison",
        "comparisons",
        "operation",
        "operations",
        "trait",
        "flag",
        "flags",
        "class",
        "classes"
    ],
    "autoload": {
        "psr-4": {
            "AxeTools\\Traits\\": "src"
        }
    },
    "authors": [
        {
            "name": "Ryan W Howe",
            "email": "axetoolsphp@gmail.com"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "AxeTools\\Traits\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "^1.4",
        "vimeo/psalm": "^4.30"
    },
    "scripts": {
        "phpunit": "phpunit --verbose --colors=always",
        "psalm": "psalm",
        "phpstan": "phpstan analyse src/ tests/ --no-progress --memory-limit=1G --level 7",
        "tests": [
            "@phpstan",
            "@psalm",
            "@phpunit"
        ]
    },
    "scripts-descriptions": {
        "phpunit": "Run PHPUnit tests",
        "tests": "Run the static analysis and unit tests"
    }
}
