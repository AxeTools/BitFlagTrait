{
    "name": "axetools/bitflagtrait",
    "description": "A PHP trait to enable bitwise comparison of flags",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "bitwise",
        "comparison",
        "comparisons",
        "operation",
        "operations",
        "trait",
        "flag",
        "flags",
        "class",
        "classes"
    ],
    "autoload": {
        "psr-4": {
            "AxeTools\\Traits\\": "src"
        }
    },
    "authors": [
        {
            "name": "Ryan W Howe",
            "email": "axetoolsphp@gmail.com"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "AxeTools\\Traits\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.1 || ^8.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "phpstan": "phpstan analyse src/ tests/ --no-progress --memory-limit=1G --level 8",
        "tests": [
            "@phpstan",
            "@phpunit"
        ]
    },
    "scripts-descriptions": {
        "phpunit": "Run PHPUnit tests",
        "tests": "Run the static analysis and unit tests"
    }
}
